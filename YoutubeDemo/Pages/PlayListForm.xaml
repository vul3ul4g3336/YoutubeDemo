<UserControl x:Class="YoutubeDemo.Pages.PlayListForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:playList="clr-namespace:YoutubeDemo.Components.PlayListCard" 
             xmlns:playListItems="clr-namespace:YoutubeDemo.Components.PlayListItems"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             x:Name="PlayListRootContainer">

    <Grid Background="#0F0F0F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
        Padding="0,10,0,10" 
        BorderBrush="#2A2A2A" 
        BorderThickness="0,0,0,1">

            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                  VerticalScrollBarVisibility="Disabled"
                  MaxHeight="320">

                <ItemsControl ItemsSource="{Binding playListModels}">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <playList:PlayListCard Margin="0,0,15,0" 
                           Command="{Binding DataContext.FetchPlaylistItems, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                           CommandParameter="{Binding id}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </ScrollViewer>
        </Border>

        <Grid x:Name="BottomSection" Grid.Row="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  HorizontalContentAlignment="Stretch">

                <ItemsControl ItemsSource="{Binding playListVideoModels}" 
                      VerticalAlignment="Top">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Margin="20,10,20,10" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                    <DataTemplate>
                            <playListItems:PlayListItems Margin="0,0,0,25" HorizontalAlignment="Stretch"
                                Command="{Binding DataContext.DirectToVideo, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CommandParameter="{Binding videoID}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>