<UserControl x:Class="YoutubeDemo.VideoForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutubeDemo"
             xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:comment="clr-namespace:YoutubeDemo.Components.Comment"  
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200" Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Background="#0F0F0F">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Border x:Name="MainCard" 
                Grid.Column="0"
                Margin="10,10,5,10"
                Background="#1A1A1A" 
                CornerRadius="16" 
                BorderBrush="#2A2A2A"
                BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="8" Opacity="0.3"/>
            </Border.Effect>

            <Border.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="MainCard" Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)" To="35" Duration="0:0:0.3">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetName="MainCard" Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)" To="0.6" Duration="0:0:0.3"/>
                            <ColorAnimation Storyboard.TargetName="MainCard" Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Color)" To="#4A9EFF" Duration="0:0:0.3"/>
                            <ThicknessAnimation Storyboard.TargetName="MainCard" Storyboard.TargetProperty="Margin" To="10,6,5,14" Duration="0:0:0.3">
                                <ThicknessAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </ThicknessAnimation.EasingFunction>
                            </ThicknessAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="MainCard" Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)" To="25" Duration="0:0:0.3"/>
                            <DoubleAnimation Storyboard.TargetName="MainCard" Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)" To="0.3" Duration="0:0:0.3"/>
                            <ColorAnimation Storyboard.TargetName="MainCard" Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Color)" To="Black" Duration="0:0:0.3"/>
                            <ThicknessAnimation Storyboard.TargetName="MainCard" Storyboard.TargetProperty="Margin" To="10,10,5,10" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" CornerRadius="16,16,0,0" ClipToBounds="True">
                        <Wpf:WebView2 x:Name="webView" MinHeight="450"/>
                    </Border>

                    <StackPanel Grid.Row="1" Margin="16">
                        <TextBlock Text="{Binding Title}" FontWeight="SemiBold" FontSize="16" Foreground="White" TextWrapping="Wrap" MaxHeight="42" TextTrimming="CharacterEllipsis" LineHeight="21" Cursor=""/>
                        <TextBlock Text="{Binding ChannelTitle}" Foreground="#B0B0B0" FontSize="13" Margin="0,10,0,0"/>

                        <Border Background="#2A2A2A" CornerRadius="8" Padding="12" Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock x:Name="DescriptionText" Text="{Binding description}" Foreground="#B0B0B0" FontSize="12" TextWrapping="Wrap" LineHeight="18" Cursor="">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="MaxHeight" Value="120"/>
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=ShowMoreToggle, Path=IsChecked}" Value="True">
                                                    <Setter Property="MaxHeight" Value="9999"/>
                                                    <Setter Property="TextTrimming" Value="None"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <ToggleButton x:Name="ShowMoreToggle" Cursor="Hand" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left" Margin="0,4,0,0">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="Foreground" Value="#4A9EFF"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="FontSize" Value="12"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <TextBlock Text="{TemplateBinding Content}">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="TextDecorations" Value="Underline"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Content" Value="...顯示更多"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter Property="Content" Value="隱藏"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                            </StackPanel>
                        </Border>

                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{Binding ViewCount, StringFormat='觀看次數：{0}{0:N0}'}" Foreground="#808080" FontSize="12" VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Border x:Name="LikeButton" CornerRadius="20" Padding="12,8" Margin="0,0,8,0" Tag="like" Cursor="Hand" MouseLeftButtonDown="RatingButton_Click">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#2A2A2A"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding LikeStatus}" Value="like">
                                                    <Setter Property="Background" Value="#FF4A9EFF"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Border.RenderTransform>
                                        <ScaleTransform ScaleX="1" ScaleY="1" CenterX="20" CenterY="12"/>
                                    </Border.RenderTransform>
                                    <TextBlock Text="👍" FontSize="16"/>
                                </Border>
                                <Border x:Name="DislikeButton" CornerRadius="20" Padding="12,8" Cursor="Hand" Tag="dislike" MouseLeftButtonDown="RatingButton_Click">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#2A2A2A"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding LikeStatus}" Value="dislike">
                                                    <Setter Property="Background" Value="#FF5555"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Border.RenderTransform>
                                        <ScaleTransform ScaleX="1" ScaleY="1" CenterX="20" CenterY="12"/>
                                    </Border.RenderTransform>
                                    <TextBlock Text="👎" FontSize="16"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>

        <Border Grid.Column="1"
                Background="#1C1C1C"
                BorderBrush="#2A2A2A"
                BorderThickness="1,0,0,0"
                Margin="5,10,10,10"
                CornerRadius="0,16,16,0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="留言" Grid.Row="0" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="16"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="CommentsHostPanel" Margin="0,0,0,16"/>
                </ScrollViewer>
            </Grid>

        </Border>
    </Grid>
</UserControl>