<UserControl x:Class="YoutubeDemo.Components.PlayListCard.PlayListCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             Width="320" Margin="10">
    <StackPanel Background="Transparent">
        <Grid Height="Auto">
            <Border Background="#333333" CornerRadius="12" Margin="15,0,15,0" Height="10" VerticalAlignment="Top"/>
            <Border Background="#666666" CornerRadius="12" Margin="8,5,8,0" Height="10" VerticalAlignment="Top"/>

            <Border CornerRadius="12" Margin="0,10,0,0" ClipToBounds="True" Background="#1A1A1A">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:InvokeCommandAction 
                Command="{Binding Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding CommandParameter , RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Grid>
                    <Image Source="{Binding thumbnails, TargetNullValue={x:Null}, FallbackValue={x:Null}}" 
                                   Stretch="UniformToFill" 
                                   Width="300" Height="170" />  

                    <Border Background="#CC000000" VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                            Margin="8" Padding="6,2" CornerRadius="4">
                        <TextBlock Text="≡ 播放清單" Foreground="White" FontSize="11" FontWeight="Bold"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <StackPanel Margin="0,8,0,0">
            <TextBlock Text="{Binding title}" Foreground="White" FontSize="16" FontWeight="Bold" 
                       TextWrapping="Wrap" MaxHeight="45" TextTrimming="CharacterEllipsis"/>
            <TextBlock Text="私人 • 播放清單" Foreground="#AAAAAA" FontSize="12" Margin="0,2,0,0"/>
            <TextBlock Text="查看完整播放清單" Foreground="#3EA6FF" FontSize="13" Margin="0,8,0,0" Cursor="Hand"/>
        </StackPanel>
    </StackPanel>
</UserControl>