<UserControl x:Class="YoutubeDemo.Components.Paginations"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutubeDemo.Components"
             xmlns:contract="clr-namespace:YoutubeDemo.Components.PaginationComponent"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="PageButtonBase" TargetType="Border">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,0,5,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2A2A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PageNumberButton" TargetType="Border" BasedOn="{StaticResource PageButtonBase}">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ActivePageButton" TargetType="Border" BasedOn="{StaticResource PageButtonBase}">
            <Setter Property="Background" Value="#FF4A9EFF"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="NavButton" TargetType="Border" BasedOn="{StaticResource PageButtonBase}">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="PageNumberText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ActivePageText" TargetType="TextBlock" BasedOn="{StaticResource PageNumberText}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="NavText" TargetType="TextBlock" BasedOn="{StaticResource PageNumberText}">
            <Setter Property="Foreground" Value="#808080"/>
        </Style>
    </UserControl.Resources>

    <Border Background="#0D0D0D" 
            CornerRadius="12" 
            Padding="16,10"
            BorderBrush="#1A1A1A"
            BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Border x:Name="JumpPreviousButton"
                        Style="{StaticResource NavButton}"
                        Tag="{x:Static contract:PaginationContract+ChangePageType.JumpPrevious}"
                        MouseLeftButtonDown="NavigationButton_Click"
                        ToolTip="快速向前" Cursor="Hand">
                    <TextBlock Text="«" Style="{StaticResource NavText}" FontSize="16"/>
                </Border>

                <Border x:Name="PreviousButton"
                        Style="{StaticResource NavButton}"
                        Tag="{x:Static contract:PaginationContract+ChangePageType.Previous}"
                        MouseLeftButtonDown="NavigationButton_Click"
                        ToolTip="上一頁">
                    <TextBlock Text="‹" Style="{StaticResource NavText}" FontSize="18"/>
                </Border>
            </StackPanel>

            <StackPanel x:Name="PageNumbersPanel" 
                        Grid.Column="1"
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <ItemsControl ItemsSource="{Binding Pages}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="PageButton"
                                    Style="{StaticResource NavButton}"
                                    ToolTip="{Binding Number}"
                                    MouseLeftButtonDown="PageButton_Click"
                                    HorizontalAlignment="Center">
                                <TextBlock x:Name="PageText"  Text="{Binding Number}" Style="{StaticResource NavText}" FontSize="20"/>
                            </Border>

                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding Active}" Value="True">
                                    <Setter TargetName="PageButton" 
                                            Property="Style" 
                                            Value="{StaticResource ActivePageButton}"
                                     />

                                    <Setter TargetName="PageText" 
                                            Property="Style" 
                                            Value="{StaticResource ActivePageText}"
                                    />
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <Border x:Name="NextButton"
                        Style="{StaticResource NavButton}"
                        Tag="{x:Static contract:PaginationContract+ChangePageType.Next}"
                        MouseLeftButtonDown="NavigationButton_Click"
                        ToolTip="下一頁">
                    <TextBlock Text="›" Style="{StaticResource NavText}" FontSize="18"/>
                </Border>

                <Border x:Name="JumpNextButton"
                        Style="{StaticResource NavButton}"
                        Tag="{x:Static contract:PaginationContract+ChangePageType.JumpNext}"
                        MouseLeftButtonDown="NavigationButton_Click"
                        ToolTip="快速向後">
                    <TextBlock Text="»" Style="{StaticResource NavText}" FontSize="16"/>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>