<UserControl x:Class="YoutubeDemo.Components.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutubeDemo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="380" d:DesignWidth="430">

    <UserControl.Resources>
        <!-- 霓虹光暈效果 -->
        <DropShadowEffect x:Key="NeonGlow" 
                          Color="#FF4A9EFF" 
                          BlurRadius="20" 
                          ShadowDepth="0" 
                          Opacity="0"/>

        <!-- Like按鈕樣式 -->
        <Style x:Key="LikeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="20"
                                Padding="12,6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#20FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="10">
        <Border x:Name="MainCard" 
                Margin="10" 
                Background="#1A1A1A" 
                CornerRadius="16" 
                Tag="{Binding VideoID}"
                BorderBrush="#2A2A2A"
                BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="8" Opacity="0.3"/>
            </Border.Effect>

            <!-- 懸停光暈效果 -->
            <Border.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="MainCard"
                                           Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)"
                                           To="35" Duration="0:0:0.3">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Storyboard.TargetName="MainCard"
                                           Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                           To="0.6" Duration="0:0:0.3"/>
                            <ColorAnimation Storyboard.TargetName="MainCard"
                                          Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Color)"
                                          To="#4A9EFF" Duration="0:0:0.3"/>
                            <ThicknessAnimation Storyboard.TargetName="MainCard"
                                              Storyboard.TargetProperty="Margin"
                                              To="10,6,10,14" Duration="0:0:0.3">
                                <ThicknessAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </ThicknessAnimation.EasingFunction>
                            </ThicknessAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="MainCard"
                                           Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)"
                                           To="25" Duration="0:0:0.3"/>
                            <DoubleAnimation Storyboard.TargetName="MainCard"
                                           Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                           To="0.3" Duration="0:0:0.3"/>
                            <ColorAnimation Storyboard.TargetName="MainCard"
                                          Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Color)"
                                          To="Black" Duration="0:0:0.3"/>
                            <ThicknessAnimation Storyboard.TargetName="MainCard"
                                              Storyboard.TargetProperty="Margin"
                                              To="10" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="180"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 縮圖區域 -->
                <Grid Grid.Row="0">
                    <Border x:Name="ThumbnailBorder" 
                            CornerRadius="16,16,0,0" 
                            ClipToBounds="True"
                            Cursor="Hand"
                            MouseLeftButtonDown="CoverImg_Click">
                        <Grid>
                            <!-- 漸層遮罩 -->
                            <Rectangle>
                                <Rectangle.Fill>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="Transparent" Offset="0"/>
                                        <GradientStop Color="#40000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>

                            <Image Source="{Binding ThumbnailUrl}" 
                                   Stretch="UniformToFill"
                                   x:Name="ThumbnailImage">
                                <Image.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="ThumbnailImage"
                                                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                               To="1.08" Duration="0:0:0.4">
                                                    <DoubleAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                                <DoubleAnimation Storyboard.TargetName="ThumbnailImage"
                                                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                               To="1.08" Duration="0:0:0.4">
                                                    <DoubleAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="ThumbnailImage"
                                                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                               To="1.0" Duration="0:0:0.4"/>
                                                <DoubleAnimation Storyboard.TargetName="ThumbnailImage"
                                                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                               To="1.0" Duration="0:0:0.4"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Image.Triggers>
                                <Image.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1" CenterX="160" CenterY="90"/>
                                </Image.RenderTransform>
                            </Image>

                            <!-- 播放按鈕疊加層 -->
                            <Border x:Name="PlayOverlay" 
                                    Background="#80000000" 
                                    Opacity="0">
                                <Viewbox Width="60" Height="60">
                                    <Canvas Width="24" Height="24">
                                        <Path Fill="#FF4A9EFF" Data="M8 5v14l11-7z"/>
                                    </Canvas>
                                </Viewbox>
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="PlayOverlay"
                                                               Storyboard.TargetProperty="Opacity"
                                                               To="1" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="PlayOverlay"
                                                               Storyboard.TargetProperty="Opacity"
                                                               To="0" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

                <!-- 資訊區域 -->
                <StackPanel Grid.Row="1" Margin="16">
                    <!-- 標題 -->
                    <TextBlock Text="{Binding Title}"
                               FontWeight="SemiBold" 
                               FontSize="16"
                               Foreground="White"
                               TextWrapping="Wrap" 
                               MaxHeight="42"
                               TextTrimming="CharacterEllipsis"
                               LineHeight="21"/>

                    <!-- 頻道名稱 -->
                    <TextBlock Text="{Binding ChannelTitle}"
                               Foreground="#B0B0B0" 
                               FontSize="13"
                               Margin="0,10,0,0"/>

                    <!-- 統計資訊與按讚區 -->
                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 左側統計 -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding ViewCount, StringFormat='觀看次數：{0:N0}'}"
                                       Foreground="#808080" 
                                       FontSize="12"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="{Binding UploadDate}" 
                                           Foreground="#808080" 
                                           FontSize="12"/>
                                <TextBlock Text="•" 
                                           Foreground="#808080" 
                                           FontSize="12" 
                                           Margin="6,0"/>
                                <TextBlock Text="{Binding Duration}" 
                                           Foreground="#808080" 
                                           FontSize="12"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- 右側按讚區 -->
                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center">
                            <!-- Like Button -->
                            <Border x:Name="LikeButton"
                                    CornerRadius="20"
                                    Padding="12,8"
                                    Margin="0,0,8,0"
                                    Tag="like"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="RatingButton_Click">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#2A2A2A"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding LikeStatus}" Value="like">
                                                <Setter Property="Background" Value="#FF4A9EFF"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="LikeButton"
                                                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                               To="1.1" Duration="0:0:0.2"/>
                                                <DoubleAnimation Storyboard.TargetName="LikeButton"
                                                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                               To="1.1" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="LikeButton"
                                                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                               To="1.0" Duration="0:0:0.2"/>
                                                <DoubleAnimation Storyboard.TargetName="LikeButton"
                                                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                               To="1.0" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1" CenterX="20" CenterY="12"/>
                                </Border.RenderTransform>
                                <TextBlock Text="👍" FontSize="16"/>
                            </Border>

                            <!-- Dislike Button -->
                            <Border x:Name="DislikeButton"
                                    CornerRadius="20"
                                    Padding="12,8"
                                    Cursor="Hand"
                                    Tag="dislike"
                                    MouseLeftButtonDown="RatingButton_Click">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#2A2A2A"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding LikeStatus}" Value="dislike">
                                                <Setter Property="Background" Value="#FF5555"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="DislikeButton"
                                                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                               To="1.1" Duration="0:0:0.2"/>
                                                <DoubleAnimation Storyboard.TargetName="DislikeButton"
                                                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                               To="1.1" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="DislikeButton"
                                                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                               To="1.0" Duration="0:0:0.2"/>
                                                <DoubleAnimation Storyboard.TargetName="DislikeButton"
                                                               Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                               To="1.0" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1" CenterX="20" CenterY="12"/>
                                </Border.RenderTransform>
                                <TextBlock Text="👎" FontSize="16"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
    </StackPanel>
</UserControl>